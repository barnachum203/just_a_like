{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "types": ["node"],
    "experimentalDecorators": true,
    "lib": ["es2017", "dom"],
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "skipLibCheck": true,
    "preserveSymlinks": true,
    "noImplicitAny": true
  },
  "exclude": [
    "node_modules"
  ]
}

